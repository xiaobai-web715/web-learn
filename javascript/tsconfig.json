{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "outDir": "./",
        "allowJs": true,
        "baseUrl": ".",
        "target": "es6",
        "sourceMap": true,
        "esModuleInterop": true, //允许在commonjs中使用export
        "moduleResolution": "node", //告诉ts文件改以何种方式来寻找依赖模块
        "module": "CommonJs", //TypeScript文件中的module，采用何种方式实现
    },
    "include": [
        "./"
    ],
    "exclude": ["node_modules"],
}